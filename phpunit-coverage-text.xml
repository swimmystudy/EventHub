<?xml version="1.0" encoding="UTF-8"?>
<!--
    PHPUnit config file.
    @link http://www.phpunit.de/manual/3.6/ja/index.html
-->
<phpunit>
    <logging>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
    </logging>
    <filter>
        <!-- Exclude directories for coverrage. -->
        <blacklist>
            <directory suffix=".php">cakephp</directory>
            <directory suffix=".php">bin</directory>
            <directory suffix=".php">*/Lib</directory>
            <directory suffix=".php">*/Plugin</directory>
            <directory suffix=".php">*/Test</directory>
            <directory suffix=".php">*/Console/Templates</directory>
            <directory suffix=".php">*/tmp</directory>
            <directory suffix=".php">*/Vendor</directory>
            <directory suffix=".php">app/Config/Migration</directory>
        </blacklist>
    </filter>
</phpunit>
